{% extends '@Shop/layout.html.twig' %}

{% block content %}
    <div class="container">
        <h1>Shopping cart
            <small class="small-head">There currently are {{ items|length }} item(s) in the basket</small>
        </h1>

        <table class="table table-responsive table-striped">
            <thead>
                <tr>
                    <th>Name:</th>
                    <th>Price (in dollars):</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.price }} $</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
